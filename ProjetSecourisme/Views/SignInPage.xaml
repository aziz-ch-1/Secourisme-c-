<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ProjetSecourisme.Models"
             xmlns:views="clr-namespace:ProjetSecourisme.Views"
             x:Class="ProjetSecourisme.Views.SignInPage"

             x:DataType="views:SignInPage"
             Title="SignInPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="StartAndExpand">

            

            <Label Text="Nom d'utilisateur" />
            <Entry Text="{}" />

            <Label Text="Mot de passe" />
            <Entry Text="{}" IsPassword="True"  />

            <Button Text="Login"  />

           

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>